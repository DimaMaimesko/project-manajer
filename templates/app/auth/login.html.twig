{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}

    <h1>Login</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group">
        <button type="submit" class="btn btn-success">Login</button>
    </div>
    <br>
    <a href="{{ path('auth.reset') }}">Forgot Your Password?</a>

    {{ form_end(form) }}

{% endblock %}
